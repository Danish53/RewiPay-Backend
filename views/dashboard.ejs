
<h1 class="mb-4" style="font-size: 26px; font-weight: 700;">Dashboard</h1>

<div class="row g-3">
  <!-- Total Products Card -->
  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <h5>Total Products</h5>
        <h2 class="fw-bold"><%= totalProducts %></h2>
      </div>
    </div>
  </div>

  <!-- Latest Products -->
  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h5>Latest Products</h5>
        <ul class="list-group list-group-flush">
          <% latest.forEach(product => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= product.name %></span>
              <span class="badge bg-primary rounded-pill">$<%= product.price %></span>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</div>
