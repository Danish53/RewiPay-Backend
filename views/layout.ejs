<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%- typeof title !=='undefined' ? title : 'RewiPay Admin' %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/public/css/styles.css">
</head>

<body class="d-flex" style="height: 100vh;">

    <!-- =============== SIDEBAR =============== -->
    <aside id="sidebar" class="sidebar bg-dark text-light d-flex flex-column" style="width: 270px;">
        <div class="sidebar-header p-3 d-flex justify-content-between align-items-center">
            <h4>Rewi<span class="text-primary">Pay</span></h4>
            <i class="bi bi-x-lg d-lg-none" id="closeSidebar"></i>
        </div>

        <ul class="nav flex-column sidebar-menu p-2">
            <li class="nav-item mb-2"><a href="/admin/dashboard" class="nav-link text-light"><i
                        class="bi bi-speedometer2 me-2"></i> Dashboard</a></li>
            <li class="nav-item mb-2"><a href="/admin/products" class="nav-link text-light"><i
                        class="bi bi-box-seam me-2"></i> Products</a></li>
            <li class="nav-item mb-2"><a href="/admin/products/new" class="nav-link text-light"><i
                        class="bi bi-plus-circle me-2"></i> Add Product</a></li>
            <li class="nav-item mb-2"><a href="/admin/login" class="nav-link text-light"><i
                        class="bi bi-arrow me-2"></i> Logout</a></li>
        </ul>
    </aside>

    <!-- =============== MAIN CONTENT =============== -->
    <main class="main-content flex-grow-1">
        <!-- Top Navbar -->
        <nav class="topbar navbar navbar-light bg-light shadow-sm px-3">
            <i class="bi bi-list d-lg-none" id="openSidebar"></i>
            <span class="fw-bold"><%- typeof title !=='undefined' ? title : 'Admin Dashboard' %></span>
        </nav>

        <!-- Page Content -->
        <div class="p-4">
            <%- body %>
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="/js/admin.js"></script>
</body>

</html>